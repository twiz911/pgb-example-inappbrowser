<?xml version="1.0" encoding="UTF-8"?> 
<widget xmlns="http://www.w3.org/ns/widgets" 
		xmlns:gap="http://phonegap.com/ns/1.0"
		id="com.slicedbreadenterprises.cf.pgb"
		version="1.1.1">
	
	<name>CurrencyFair</name>
	<description>Currency Exchange via CurrencyFair</description>
	<icon src="icon.png" />

	<author href="https://www.slicedbreadenterprises.com" email="ios@slicedbreadenterprises.com">SlicedBreadEnterprises</author>

	<!-- @note gap:platforms not working in PGB! -->
	<gap:platform name="ios" />
	<gap:platform name="android" minVersion="2.1"/>

	<gap:plugin name="org.apache.cordova.inappbrowser" />

	<!-- PG version -->
	<preference name="phonegap-version" value="3.6.3" />
	<!--
		We don't really need specific permissions,
		but PGB will add some.
	-->
	<preference name="permissions" value="none"/>

	<access origin="*" />

<gap:splash src="splash.png" />

</widget>
